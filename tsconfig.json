{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2022",
        "outDir": "out",
        "lib": [
            "es2022"
        ],
        "strict": true,
        "sourceMap": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/vscode/*",
                "*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts",
        "test/testProjects"
    ]
}
